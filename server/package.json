  "scripts": {
    "cleanup-ui-build": "rimraf ./public",
    "cleanup-server-build": "rimraf dist",
    "prebuild": "npm run cleanup-ui-build && npm run cleanup-server-build",
    "build": "nest build",
    "build-ui": "npm --prefix ./../ui install && npm --prefix ./../ui run build",
    "build-all": "npm run build && npm run build-ui",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
